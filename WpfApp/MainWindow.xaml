<Window x:Class="WpfApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800"
        FontFamily="Lucida Sans Unicode" WindowStartupLocation="CenterScreen">
    
    <Grid x:Name="MainGrid">
        <Label x:Name="WelcomeLabel" Content="Welcome to the restaurant app" HorizontalAlignment="Left" Margin="49,38,0,0" VerticalAlignment="Top" Height="46" Width="387" FontSize="25"/>
        <Button x:Name="OrderButton" Content="My order" HorizontalAlignment="Left" Margin="603,49,0,0" VerticalAlignment="Top" Height="32" Width="114" FontSize="16" Foreground="Black" BorderBrush="#FF543C62" BorderThickness="0,0,0,0" Click="OrderButton_Click">
            <Button.Background>
                <SolidColorBrush Color="#FFC2AAEE" Opacity="0.6"/>
            </Button.Background>
        </Button>
        <ScrollViewer Margin="0,163,0,0">
            <Grid x:Name="DishesGrid" Margin="0,0,0,0"/>
        </ScrollViewer>
        <Label x:Name="MenusLabel" Content="Available menus:" HorizontalAlignment="Left" Margin="49,106,0,0" VerticalAlignment="Top" Height="32" Width="133" FontSize="15"/>
    </Grid>
</Window>
